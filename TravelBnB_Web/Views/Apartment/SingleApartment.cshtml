@model ApartmentDTO
<div class="container mybox my-5">
	<h1 class="text-center fw-bold">@Model.Name</h1>
	<div class="myAptSingle col-12 d-flex">
		
		<div class="leftSingleAp col-7">
			<img src="@Model.ImageUrl" class="img-fluid" />
		</div>
		<div class="rightSingleAp col-5 d-flex flex-column">

			<span class="fw-bold">@Model.Name</span> 
			<p>@Model.Details</p>

			<div class="align-self-start d-flex gap-3">
				<span class="">Prezzo:</span><span class="">@Model.Rate.ToString("c")</span>
			</div>
			<div class="align-self-start d-flex gap-3">
				<span class="">Capienza:</span><span class="">@Model.Occupancy</span>
			</div>
			<div class="align-self-start d-flex gap-3">
				<span class="">Mq2:</span><span class="">@Model.Mq2</span>
			</div>

		</div>
	</div>
</div>	


