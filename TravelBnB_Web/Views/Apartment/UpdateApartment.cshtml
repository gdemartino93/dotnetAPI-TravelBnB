@model ApartmentUpdateDTO
<div class="container">
    <div class="row">
        <h2 class="text-center my-3"> Modifica apparamento</h2>
    </div>
    <div class="row">
        <div class="d-flex justify-content-center my-3">
            <form class="col-12 col-md-8 col-lg-6" method="post" asp-action="CreateApartment">
                <input asp-for="Id" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name">Nome</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Details">Dettagli</label>
                    <textarea asp-for="Details" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="Rate">Prezzo</label>
                    <input asp-for="Rate" class="form-control">
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Mq2">Mq2</label>
                    <input asp-for="Mq2" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Occupancy">Posti</label>
                    <input asp-for="Occupancy" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl">Foto</label>
                    <input asp-for="ImageUrl" class="form-control">
                </div>
                <div class="mb-3 mb-5">
                    <label asp-for="Amenity">Comfort</label>
                    <input asp-for="Amenity" class="form-control">
                </div>
                <div class="d-flex justify-content-end">
                    <a asp-controller="Apartment" asp-action="IndexApartment" type="submi" class="myBtnAdd" style="--clr:#0FF0FC"><span>Torna alla lista</span><i></i></a>
                    <button asp-controller="Apartment" asp-action="CreateApartment" type="submit" class="myBtnAdd" style="--clr:#0FF0FC"><span>Modifica</span><i></i></button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}